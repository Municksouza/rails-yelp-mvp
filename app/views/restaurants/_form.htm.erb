<%= simple_form_for(@model) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :attribute_1 %>
    <%= f.input :attribute_2 %>
    <%= f.input :attribute_3 %>
    <!-- Add more input fields as needed -->
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
