<h1>Restaurants</h1>

<table class="table">
  <head>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </head>

  <body>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.category %></td>
        <td><%= link_to 'Show', new_restaurant_path(restaurant), class: 'btn btn-info' %></td>
      </tr>
    <% end %>
  </body>
</table>

<%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-primary' %>
